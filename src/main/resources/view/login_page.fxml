<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.account.LoginPageController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/background image 2.jpg" />
         </image>
      </ImageView>
      <Label layoutX="560.0" layoutY="30.0" text="Clothify" textFill="#0d47a1">
         <font>
            <Font size="71.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtEmail" alignment="CENTER" layoutX="532.0" layoutY="228.0" prefHeight="39.0" prefWidth="302.0" promptText="Enter Your Email">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </JFXTextField>
      <JFXTextField fx:id="txtPassword" alignment="CENTER" layoutX="534.0" layoutY="299.0" prefHeight="39.0" prefWidth="302.0" promptText="Enter Your Password">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </JFXTextField>
      <JFXButton layoutX="581.0" layoutY="392.0" onAction="#btnOnActionLogin" prefHeight="39.0" prefWidth="207.0" style="-fx-background-color: #0D47A1; -fx-background-radius: 20;" text="Log in" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </JFXButton>
      <Label fx:id="txtError" alignment="TOP_CENTER" layoutX="569.0" layoutY="166.0" prefHeight="19.0" prefWidth="217.0" textFill="#df0c0c">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="482.0" layoutY="523.0" onMouseClicked="#btnOnActionCreateAccount" text="Create a new account" textFill="#0d47a1">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="708.0" layoutY="522.0" text="Forget your Password..?" textFill="#0d47a1">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
